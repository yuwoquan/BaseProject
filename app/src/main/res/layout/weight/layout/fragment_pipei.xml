<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#289DFA"
    tools:context=".ui.fragment.dianjingbao.PipeiFragment">


    <com.qmuiteam.qmui.widget.QMUITopBar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/mtopbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/qmui_topbar_height"
        app:qmui_layout_collapseMode="pin"
        app:qmui_topbar_title_color="#FFFF"
        app:qmui_topbar_bg_color="@color/qmui_config_color_transparent"
        app:qmui_topbar_need_separator="false"/>

    <LinearLayout
        android:layout_marginTop="?attr/qmui_topbar_height"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:textColor="#BBB9B9"
        android:textSize="14sp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="10dp"
        android:text="1.一个人唱歌好像差了点意思？找个人一起飙歌吧~  \n2.请输入你的信息，系统将根据资料为您实时匹配噢"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        <com.qmuiteam.qmui.widget.grouplist.QMUIGroupListView
            android:layout_marginTop="10dp"
            android:id="@+id/groupListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#BBB9B9"
            android:textSize="12sp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_marginTop="10dp"
            android:text="*请输入你的信息，系统将根据信息为你实时匹配哦！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            app:qmui_backgroundColor="#25B2EB"
            app:qmui_radiusBottomLeft="5dp"
            app:qmui_radiusBottomRight="5dp"
            app:qmui_radiusTopLeft="5dp"
            app:qmui_radiusTopRight="5dp"
            android:layout_marginTop="15dp"
            app:qmui_borderWidth="0dp"
            android:text="真实匹配"
            android:textColor="#FFFFFF"
            android:id="@+id/signout"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</FrameLayout>